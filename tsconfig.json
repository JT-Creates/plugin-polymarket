{
  "compilerOptions": {
    "target": "ES2022", // Modern target
    "module": "ESNext", // Use ESNext for module system
    "moduleResolution": "bundler", // Or "NodeNext", modern resolution strategy
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true, // Good for debugging
    "lib": ["ESNext"],
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "moduleDetection": "force",
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["../core/src"],
      "@elizaos/core/*": ["../core/src/*"]
    }
  },
  "include": ["plugin-polymarket/src/**/*.ts"]
}
